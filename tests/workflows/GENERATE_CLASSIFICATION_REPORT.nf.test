nextflow_workflow {

    name "Test Workflow GENERATE_CLASSIFICATION_REPORT"
    script "workflows/GENERATE_CLASSIFICATION_REPORT.nf"
    workflow "GENERATE_CLASSIFICATION_REPORT"

    test("Should run without failures") {

        when {
            params {
                outdir = "$launchDir/results/"

                meta = [
                    sample_id:"49759_2_96",
                    taxid:"8076432",
                    id:"49759_2_96.8076432",
                    reference_header:">kraken:taxid|8076432|A/Taiwan/1/1986-H1N1 segment 1",
                    longest_non_n_subsequence:"2335",
                    virus:"2955291",
                    virus_name:"Alphainfluenzavirus influenzae",
                    selected_taxid:"8076432",
                    ref_selected:"A/Taiwan/1/1986(H1N1) segment 1",
                    sample_subtype:"",
                    flu_segment:"1",
                    virus_subtype:"H1N1",
                    parent_selected:False,
                    num_reads:"38188",
                    report_name:"Influenza A Virus"
                ]
                meta_qc_json = "$projectDir/tests/test_data/test_generate_report/49759_2_96.8076432.qc.json"
                meta_nc_json = "$projectDir/tests/test_data/test_generate_report/49759_2_96.8076432.nextclade.json"

            }
            workflow {
                """
                // define inputs of the workflow here. Example:
                input[0] = Channel.of([params.meta.id, params.meta, params.meta_qc_json, params.meta_nc_json])
                """
            }
        }

        then {
            assert workflow.success
            assert snapshot(workflow.out).match()
        }

    }

}
