nextflow_process {

    name "Test Process run_aligner with bwa"
    script "modules/alignment.nf"
    process "run_aligner"

    test("Should run without failures") {

        when {
            params {
                meta = [
                    id:"test.9000000",
                    sample_id:"test",
                    taxid:9000000
                ]
                read_aligner = "bwa"
                read_aligner_params = ""
            }
            process {
                """
                // define inputs of the process here. Example:
                input[0] = tuple(
                    params.meta,
                    [
                        file("${projectDir}/tests/test_data/test_input_fastqs/test_1.fastq.gz"),
                        file("${projectDir}/tests/test_data/test_input_fastqs/test_2.fastq.gz")
                    ],
                    file("${projectDir}/tests/test_data/test_references/9000000.fa")
                    )
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
