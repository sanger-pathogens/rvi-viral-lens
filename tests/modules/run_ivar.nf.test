nextflow_process {

    name "Test Process run_ivar"
    script "modules/run_ivar.nf"
    process "run_ivar"

    test("Should run without failures") {

        when {
            params {
                meta = [
                    id:"test2.9000000",
                    sample_id:"test2",
                    taxid:9000000
                ]
                test_loc="${projectDir}/tests/test_data"
            }
            process {
                """
                // define inputs of the process here. Example:
                input[0]=tuple(
                    params.meta,
                    [
                        file("${params.test_loc}/test_input_fastqs/test_1.fastq.gz"),
                        file("${params.test_loc}/test_input_fastqs/test_2.fastq.gz")
                    ],
                    file("${params.test_loc}/test_alignments/test2.9000000.sorted.bam"),
                    file("${params.test_loc}/test_alignments/test2.9000000.sorted.bam.bai"),
                    file("${params.test_loc}/test_references/9000000.fa")
                )
                input[1] = "0"
                input[2] = "0.75"
                input[3] = "10"
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
