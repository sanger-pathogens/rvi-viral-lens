/*
========================================================================================
    Nextflow config file for running tests
========================================================================================
*/

params {
    meta = [id:"test"]
    db_path = "${projectDir}/tests/test_data/test_kraken_databases/minimal"
}

process {
    // default container
    container = "docker://python:3.15.0a2-trixie"

    withLabel: ivar {
        container = "quay.io/gsu-pipelines/rvi-vp-ivar:1.2"
    }

    withLabel: kraken {
        container = "docker://staphb/kraken2:2.1.6"
    }

    withLabel: pangolin {
        container = "quay.io/biocontainers/pangolin:4.3.1--pyhdfd78af_0"
    }

    withLabel: kraken2ref {
        container = "quay.io/gsu-pipelines/rvi-vp-kraken2ref:v2.2.0"
    }

    withLabel: qc {
        container = "quay.io/gsu-pipelines/rvi-vp-qc:v1.1"
    }

    withLabel: aligner {
        container = "quay.io/gsu-pipelines/rvi-vp-alignment:1.0"
    }

    withLabel: nextclade {
        container = "docker://nextstrain/nextclade:3.16.0"
    }

    // ignore memory LSF k2r escalation strategy
    withLabel: mem_k2r_escalate {
        memory = "1 GB"
    }
}
