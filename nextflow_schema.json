{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/genomic-surveillance/rvi-viral-lens",
  "title": "Viral Lens pipeline parameters",
  "description": "identify the presence of Flu, SARS-CoV-2 and RSV and obtain, if possible, high quality consensus sequences for those virus.",
  "type": "object",
  "properties": {
    "manifest": {
      "type": "string"
    },
    "db_path": {
      "type": "string"
    },
    "db_library_fa_path": {
      "type": "string"
    },
    "outdir": {
      "type": "string",
      "default": "$launchDir/output/"
    },
    "do_scov2_subtyping": {
      "type": "boolean",
      "default": true
    },
    "scv2_keyword": {
      "type": "string",
      "default": "Severe acute respiratory syndrome coronavirus 2"
    },
    "kraken2_mem": {
      "type": "string",
      "default": "2.GB"
    },
    "kraken2_cpus": {
      "type": "integer",
      "default": 4
    },
    "k2r_polling_mode": {
      "type": "string",
      "default": "max"
    },
    "min_reads_for_taxid": {
      "type": "integer",
      "default": 100
    },
    "k2r_max_total_reads_per_fq": {
      "type": "integer",
      "default": 10000000
    },
    "read_aligner": {
      "type": "string",
      "default": "minimap2"
    },
    "read_aligner_params": {
      "type": "string",
      "default": "-ax sr -k11 -w 4"
    },
    "mpileup_max_depth": {
      "type": "integer",
      "default": 2000
    },
    "ivar_initial_min_depth": {
      "type": "integer",
      "default": 1
    },
    "ivar_initial_freq_threshold": {
      "type": "number",
      "default": 0.6
    },
    "ivar_polish_min_depth": {
      "type": "integer",
      "default": 10
    },
    "ivar_polish_freq_threshold": {
      "type": "number",
      "default": 0.75
    },
    "max_attempts": {
      "type": "integer",
      "default": 3
    },
    "default_error_strategy": {
      "type": "string",
      "default": "terminate"
    },
    "mem_k2r_b0_offset": {
      "type": "integer",
      "default": 2
    },
    "mem_k2r_b0": {
      "type": "number",
      "default": 1.23932729
    },
    "mem_k2r_b0_final": {
      "type": "number",
      "default": 3.23932729
    },
    "mem_k2r_b1": {
      "type": "number",
      "default": 3.57231124
    },
    "mem_k2r_f1": {
      "type": "number",
      "default": 1.5
    },
    "mem_k2r_a2": {
      "type": "integer",
      "default": 2
    },
    "tracedir": {
      "type": "string",
      "default": "./results/pipeline_info"
    },
    "max_memory": {
      "type": "string",
      "default": "2.9 TB"
    },
    "max_cpus": {
      "type": "integer",
      "default": 256
    },
    "max_time": {
      "type": "string",
      "default": "30d"
    },
    "max_retries": {
      "type": "integer",
      "default": 2
    },
    "retry_strategy": {
      "type": "string",
      "default": "ignore"
    },
    "queue_size": {
      "type": "string"
    },
    "submit_rate_limit": {
      "type": "string"
    },
    "input": {
      "type": "string"
    },
    "results_dir": {
      "type": "string",
      "default": "./results"
    },
    "developer_publish": {
      "type": "boolean"
    },
    "do_preprocessing": {
      "type": "boolean"
    },
    "run_trimmomatic": {
      "type": "boolean",
      "default": true
    },
    "run_trf": {
      "type": "boolean",
      "default": true
    },
    "run_hrr": {
      "type": "boolean",
      "default": true
    },
    "publish_clean_reads": {
      "type": "boolean"
    },
    "debug_preproc_output": {
      "type": "boolean"
    },
    "nextclade_index_json": {
      "type": "string"
    },
    "do_consensus_polishing": {
      "type": "boolean",
      "default": true
    }
  }
}
